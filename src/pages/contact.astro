---
import MainLayout from "../layouts/main-layout.astro";
import ContactInfo from "../components/contact-box.tsx";
import ContactForm from "../components/contact-form.tsx";
---

<MainLayout title="Aneka | Contáctanos">
  <!-- Banner Section -->

  <section class="w-full bg-contact h-[50vh] flex justify-center items-end">
    <div
      class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-1"
    >
      <h1
        class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200"
      >
        Contáctanos
      </h1>
      <p
        class="text-base lg:text-[22px] lg:leading-[33px] tracking-tight font-jost text-text-gray"
      >
        <a href="/">Inicio</a> / Contacto
      </p>
    </div>
  </section>

  <!-- Intro Section -->

  <section
    class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-1 px-12 xl:px-0 w-full mx-auto pt-[10px] lg:pt-[100px]"
  >
    <h2
      class="text-[30px] text-center capitalize font-dm tracking-wide lg:max-w-[60%] leading-8 md:leading-[62.50px] md:text-[50px] mx-auto text-text-blue"
    >
      Ponte en contacto con nosotros.
    </h2>

    <!-- main section -->
    <div
      class="grid grid-cols-1 gap-[15px] pt-20 lg:grid-cols-3 place-content-center"
    >
      <ContactInfo />
      <ContactForm />
    </div>
  </section>
</MainLayout>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
